    "homepage": "https://github.com/carman1965/HOTBC#readme",
    "dependencies": {
        "leaflet": "^1.7.1",
        "leaflet.markercluster": "^1.5.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.1.0",
